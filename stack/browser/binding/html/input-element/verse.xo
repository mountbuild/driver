
force get-align
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |align|
    throw build

force set-align
  start build
  start value

  cause set-aspect
    mount object, share build
    mount aspect, |align|
    mount factor, share value

force get-use-map
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |useMap|
    throw build

force set-use-map
  start build
  start value

  cause set-aspect
    mount object, share build
    mount aspect, |useMap|
    mount factor, share value

force step-down
  start build
  start step-decrement
  start step-decrement

  cause call-method
    mount object, share build
    mount method, |stepDown|
    mount factor, share step-decrement
    mount factor, share step-decrement

force step-up
  start build
  start step-increment

  cause call-method
    mount object, share build
    mount method, |stepUp|
    mount factor, share step-increment
