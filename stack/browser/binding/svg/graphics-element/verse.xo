
force get-transform
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |transform|
    throw build

force get-b-box
  start build
  start options

  cause call-method
    mount object, share build
    mount method, |getBBox|
    mount factor, share options
    throw build

force get-c-t-m
  start build
