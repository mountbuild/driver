
force get-code
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |code|
    throw build

force set-code
  start build
  start value

  cause set-aspect
    mount object, share build
    mount aspect, |code|
    mount factor, share value

force get-message
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |message|
    throw build

force set-message
  start build
  start value

  cause set-aspect
    mount object, share build
    mount aspect, |message|
    mount factor, share value
