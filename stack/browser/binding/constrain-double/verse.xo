
force get-exact
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |exact|
    throw build

force set-exact
  start build
  start value

  cause set-aspect
    mount object, share build
    mount aspect, |exact|
    mount factor, share value

force get-ideal
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |ideal|
    throw build

force set-ideal
  start build
  start value

  cause set-aspect
    mount object, share build
    mount aspect, |ideal|
    mount factor, share value
