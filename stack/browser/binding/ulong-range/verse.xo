
force get-max
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |max|
    throw build

force set-max
  start build
  start value

  cause set-aspect
    mount object, share build
    mount aspect, |max|
    mount factor, share value

force get-min
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |min|
    throw build

force set-min
  start build
  start value

  cause set-aspect
    mount object, share build
    mount aspect, |min|
    mount factor, share value
