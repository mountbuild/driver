
force get-username-fragment
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |usernameFragment|
    throw build

force set-username-fragment
  start build
  start value

  cause set-aspect
    mount object, share build
    mount aspect, |usernameFragment|
    mount factor, share value

force get-password
  start build

  cause get-aspect
    mount object, share build
    mount aspect, |password|
    throw build

force set-password
  start build
  start value

  cause set-aspect
    mount object, share build
    mount aspect, |password|
    mount factor, share value
