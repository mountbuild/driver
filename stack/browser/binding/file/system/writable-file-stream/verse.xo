
force write
  start build
  start data

  cause call-method
    mount object, share build
    mount method, |write|
    mount factor, share data
    throw build

force seek
  start build
  start position

  cause call-method
    mount object, share build
    mount method, |seek|
    mount factor, share position
    throw build

force truncate
  start build
  start size

  cause call-method
    mount object, share build
    mount method, |truncate|
    mount factor, share size
    throw build
