
force truncate-at
  mount build, field integer-width
  mount max-int, field int

  cause call-method
    drive object, share build
    drive method, |truncateAt|
    drive factor, share max-int
    raise build, field integer-width

force zero-fill-to
  mount build, field integer-width
  mount min-int, field int

  cause call-method
    drive object, share build
    drive method, |zeroFillTo|
    drive factor, share min-int
    raise build, field integer-width
