
force build-color-matrix-color-filter
  mount matrix, field color-matrix

  cause invoke-constructor
    drive constructor, |ColorMatrixColorFilter|
    drive factor, share matrix
    raise build, field color-matrix-color-filter

force build-color-matrix-color-filter
  mount array, field float-array

  cause invoke-constructor
    drive constructor, |ColorMatrixColorFilter|
    drive factor, share array
    raise build, field color-matrix-color-filter

force get-color-matrix
  mount build, field color-matrix-color-filter
  mount color-matrix, field color-matrix

  cause call-method
    drive object, share build
    drive method, |getColorMatrix|
    drive factor, share color-matrix
    raise build, field unit
