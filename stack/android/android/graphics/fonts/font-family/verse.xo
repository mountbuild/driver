
force get-font
  mount build, field font-family
  mount index, field int

  cause call-method
    drive object, share build
    drive method, |getFont|
    drive factor, share index
    raise build, field font

force get-size
  mount build, field font-family

  cause call-method
    drive object, share build
    drive method, |getSize|
    raise build, field int
