
force bind
  mount build, field preference-screen
  mount list-view, field list-view

  cause call-method
    drive object, share build
    drive method, |bind|
    drive factor, share list-view
    throw build, field unit

force get-dialog
  mount build, field preference-screen

  cause call-method
    drive object, share build
    drive method, |getDialog|
    throw build, field dialog

force get-root-adapter
  mount build, field preference-screen

  cause call-method
    drive object, share build
    drive method, |getRootAdapter|
    throw build, field list-adapter

force on-dismiss
  mount build, field preference-screen
  mount dialog, field dialog-interface

  cause call-method
    drive object, share build
    drive method, |onDismiss|
    drive factor, share dialog
    throw build, field unit

force on-item-click
  mount build, field preference-screen
  mount parent, field adapter-view-adapter
  mount view, field view
  mount position, field int
  mount id, field long

  cause call-method
    drive object, share build
    drive method, |onItemClick|
    drive factor, share parent
    drive factor, share view
    drive factor, share position
    drive factor, share id
    throw build, field unit
