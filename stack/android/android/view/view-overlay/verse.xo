
force add
  mount build, field view-overlay
  mount drawable, field drawable

  cause call-method
    drive object, share build
    drive method, |add|
    drive factor, share drawable
    raise build, field unit

force clear
  mount build, field view-overlay

  cause call-method
    drive object, share build
    drive method, |clear|
    raise build, field unit

force remove
  mount build, field view-overlay
  mount drawable, field drawable

  cause call-method
    drive object, share build
    drive method, |remove|
    drive factor, share drawable
    raise build, field unit
