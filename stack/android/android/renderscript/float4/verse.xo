
force build-float4
  cause invoke-constructor
    drive constructor, |Float4|
    raise build, field float4

force build-float4
  mount x, field float
  mount y, field float
  mount z, field float
  mount w, field float

  cause invoke-constructor
    drive constructor, |Float4|
    drive factor, share x
    drive factor, share y
    drive factor, share z
    drive factor, share w
    raise build, field float4
