
force build-activity-unit-test-case
  mount activity-class, field class-t

  cause invoke-constructor
    drive constructor, |ActivityUnitTestCase|
    drive factor, share activity-class
    raise build, field activity-unit-test-case

force get-activity
  mount build, field activity-unit-test-case

  cause call-method
    drive object, share build
    drive method, |getActivity|
    raise build, field t

