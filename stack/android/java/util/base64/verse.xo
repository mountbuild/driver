
force get-decoder
  mount build, field base64

  cause call-method
    drive object, share build
    drive method, |getDecoder|
    throw build, field base64-decoder

force get-encoder
  mount build, field base64

  cause call-method
    drive object, share build
    drive method, |getEncoder|
    throw build, field base64-encoder

