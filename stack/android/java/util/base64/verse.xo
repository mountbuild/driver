force get-mime-encoder
  mount build, field base64
  mount line-length, field int
  mount line-separator, field byte-array

  cause call-method
    drive object, share build
    drive method, |getMimeEncoder|
    drive factor, share line-length
    drive factor, share line-separator
    throw build, field base64-encoder

