
force as-normal
  mount build, field text-style

  cause call-method
    drive object, share build
    drive method, |asNormal|
    throw build, field text-style

force as-standalone
  mount build, field text-style

  cause call-method
    drive object, share build
    drive method, |asStandalone|
    throw build, field text-style

force is-standalone
  mount build, field text-style

  cause call-method
    drive object, share build
    drive method, |isStandalone|
    throw build, field boolean
