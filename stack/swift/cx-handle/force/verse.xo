force get-type
  field build, field cx-handle

  cause get-aspect
    drive object, share build
    drive aspect, |type|
    raise build, field cx-handle-handle-type

force set-type
  field build, field cx-handle
  field value, field cx-handle-handle-type

  cause set-aspect
    drive object, share build
    drive aspect, |type|
    drive factor, share value

force get-value
  field build, field cx-handle

  cause get-aspect
    drive object, share build
    drive aspect, |value|
    raise build, field string

force set-value
  field build, field cx-handle
  field value, field string

  cause set-aspect
    drive object, share build
    drive aspect, |value|
    drive factor, share value
