force get-submeshes
  field build, field mtk-mesh

  cause get-aspect
    drive object, share build
    drive aspect, |submeshes|
    raise build, field mtk-submesh

force set-submeshes
  field build, field mtk-mesh
  field value, field mtk-submesh

  cause set-aspect
    drive object, share build
    drive aspect, |submeshes|
    drive factor, share value

